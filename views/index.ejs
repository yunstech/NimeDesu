
<%- include('partials/header') %>
      <!-- Carousel -->
      <% completed.reverse() %>
      <section>
        <div
            id="carouselExampleCaptions"
            class="carousel slide"
            data-ride="carousel"
          >
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleCaptions"
                data-slide-to="0"
                class="active"
              ></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
              <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                  <img src="upload/<%= completed[0].img %>" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= completed[0].judul %></h5>
                  <p><%= truncateString(completed[0].sinopsis, 100) %></p>
                  
                </div>
              </div>
              <div class="carousel-item">
                <img src="upload/<%= completed[1].img %>" class="d-block w-100" alt="..." />
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= completed[1].judul %></h5>
                  <p><%= truncateString(completed[1].sinopsis, 100) %></p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="upload/<%= completed[2].img %>" class="d-block w-100" alt="..." />
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= completed[2].judul %></h5>
                  <p><%= truncateString(completed[2].sinopsis, 100) %></p>
                </div>
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleCaptions"
              role="button"
              data-slide="prev"
            >
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleCaptions"
              role="button"
              data-slide="next"
            >
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </section>
      

    <section id="main-section">
      <div class="container">
        <div class="row">
          <div class="ongoing-title">
            <h4 class="ongoing">ONGOING</h4>
            <hr class="hr">
          </div>
        </div>
        
        <div class="row">
          <% ongoing.reverse() %>
          <% ongoing.forEach(function(item, index) { %>
            <%if(index < 6){ %>
              <div class="col-sm-4">
                <div class="card thumbnail-card">
                  <a href="/anime/<%= item._id %>"
                    ><img
                      src="upload/<%= item.img %>"
                      class="card-img-top"
                      alt="..."
                  /></a>
                  <div class="card-body">
                    <h5 class="card-title"><%= truncateString(item.judul, 30) %></h5>
                    <p class="card-text">
                      <%= truncateString(item.sinopsis, 100) %>
                    </p>
                    <div class="progress">
                      <div
                        class="progress-bar"
                        role="progressbar"
                        style="width: <%= item.progress %>%"
                        aria-valuenow="<%= item.progress %>"
                        aria-valuemin="0"
                        aria-valuemax="100"
                      ><%= item.progress %>%</div>
                    </div>  
                  </div>
                  <h2 class="judul-anime"><%= truncateString(item.judul, 30) %></h2>
                  <div class="eps">
                    <p>Episode : <%= item.jumlahEpisodeTelahRilis %></p>
                  </div>
                </div>
              </div>
           <% }else{ %>
            <%   return null; %>
              
          <%  } %>
          
            
         <% }) %>
          

      <!-- Completed -->
      <div class="container">
        <div class="row">
          <div class="completed-title">
            <h4 class="completed">COMPLETED</h4>
            <hr class="hr">
          </div>
        </div>
        <div class="row">
          
          <% completed.forEach(function(item, index) { %>
            <%if(index < 6){ %>
              <div class="col-sm-4">
                <div class="card thumbnail-card">
                  <a href="/anime/<%= item._id %>"
                    ><img
                      src="upload/<%= item.img %>"
                      class="card-img-top"
                      alt="..."
                  /></a>
                  <div class="card-body">
                    <h5 class="card-title"><%= truncateString(item.judul, 30) %></h5>
                    <p class="card-text"><%= truncateString(item.sinopsis, 100) %></p>
                  </div>
                  <div class="eps">
                    <p>‚≠ê <%= item.skor %></p>
                  </div>
                  <h2 class="judul-anime"><%= truncateString(item.judul, 30) %></h2>
                </div>
              </div>
           <% }else{ %>
            <%   return null; %>
          
          <%  } %>
          
            
         <% }) %>
          
        </div>
      </div>
    </section>

   
    <%- include('partials/footer') %>