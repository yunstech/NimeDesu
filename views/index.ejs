<%- include('partials/header2') %>

<% completed.reverse() %>
<!-- Carousel -->
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="upload/<%= completed[0].img %>" class="d-block w-100" alt="img.jpg">
      <div class="carousel-caption">
        <h5><%= completed[0].judul %></h5>
        <p><%= truncateString(completed[0].sinopsis, 100) %></p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="upload/<%= completed[1].img %>" class="d-block w-100" alt="img.jpg">
      <div class="carousel-caption">
        <h5><%= completed[1].judul %></h5>
        <p><%= truncateString(completed[1].sinopsis, 100) %></p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="upload/<%= completed[2].img %>" class="d-block w-100" alt="img.jpg">
      <div class="carousel-caption">
        <h5><%= completed[2].judul %></h5>
        <p><%= truncateString(completed[2].sinopsis, 100) %></p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>

<!-- MAIN CONTENT -->

<section id="middle">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="type-title">
          <h2>ON AIR</h2>
          <div class="button-title">
            <a href="#" class="btn btn-danger">See More!</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row home-content">
      <% ongoing.reverse() %>
      <% ongoing.forEach(function(item, index) { %>
      <%if(index < 6){ %>
      <div class="col-lg-4 card-content">
        <div class="card" style="width: 18rem;">
          <a href="/anime/<%= item._id %>"><img src="upload/<%= item.img %>" class="card-img-top" alt="Apa hayo"></a>
          <p class="item">Episode : <%= item.jumlahEpisodeTelahRilis %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= truncateString(item.judul, 30) %></li>
          </ul>
          <div class="card-body">
            <p class="card-text">Genre : Hentai</p>
            <p class="card-text"><%= truncateString(item.sinopsis, 100) %></p>
          </div>
        </div>
      </div>
      <% }else{ %>
      <%   return null; %>

      <%  } %>


      <% }) %>



    </div>

    <!-- Completed -->

    <div class="row">
      <div class="col-sm-12">
        <div class="type-title">
          <h2>COMPLETED</h2>
          <div class="button-title">
            <a href="#" class="btn btn-danger">See More!</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row home-content">
      <% completed.forEach(function(item, index) { %>
      <%if(index < 6){ %>
      <div class="col-lg-4 card-content">
        <div class="card" style="width: 18rem;">
          <a href="/anime/<%= item._id %>"><img src="upload/<%= item.img %>" class="card-img-top" alt="Apa hayo"></a>
          <p class="item">‚≠ê <%= item.skor %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= truncateString(item.judul, 30) %></li>
          </ul>
          <div class="card-body">
            <p class="card-text">Genre: hentai</p>
            <p class="card-text"><%= truncateString(item.sinopsis, 100) %></p>
          </div>
        </div>
      </div>
      <% }else{ %>
      <%   return null; %>

      <%  } %>


      <% }) %>

    </div>
</section>




